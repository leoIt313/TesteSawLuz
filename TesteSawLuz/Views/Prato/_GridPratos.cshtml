@model List<TesteSawLuz.Application.ViewModel.Response.ListarPratoResponseViewModel>

<table class="table">
	<thead class="thead-dark">
		<tr>
			<th scope="col">#</th>
			<th></th>
			<th></th>
			<th scope="col">Restaurante</th>
			<th scope="col">Prato</th>
			<th scope="col">Preço</th>
		</tr>
	</thead>
	<tbody>
		@for (int i = 0; i < Model.Count; i++)
		{
			<tr>
				<th scope="row"> 1</th>
				<th><span class="glyphicon glyphicon-edit" aria-hidden="true" onclick="abrirEditarPrato('@Model[i].IdPrato','@Model[i].IdRestaurante','@Model[i].NomePrato','@Model[i].Valor')"></span></th>
				<th><span class="glyphicon glyphicon-trash" aria-hidden="true" onclick="excluirPrato('@Model[i].IdPrato')"></span></th>
				<td>@Model[i].NomeRestaurante</td>
				<td>@Model[i].NomePrato</td>
				<td>R$ @Model[i].Valor</td>
			</tr>
		}



	</tbody>
</table>